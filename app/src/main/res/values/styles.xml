<resources>
    <style name="TextAppearance.Widget.Event.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- Text styling can be done here-->
    </style>
    
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>

        <item name="colorPrimaryDark">@color/txt_main</item>
        <item name="colorPrimary">@color/txt_main</item>
        <item name="colorAccent">@color/txt_main</item>

        <item name="android:textColorPrimary">@color/txt_main</item>
        <item name="android:textColorSecondary">@color/btn_icon_default</item>

        <item name="android:spinnerItemStyle">@style/ScalaSpinnerItem</item>
        <item name="android:spinnerStyle">@style/ScalaSpinner</item>

        <item name="actionMenuTextColor">@color/txt_main</item>

        <item name="popupTheme">@style/ActionBarMenuTheme</item>

        <item name="popupMenuStyle">@style/PopupMenuTheme</item>
        <item name="textAppearanceLargePopupMenu">@style/PopupMenuTextAppearanceLarge</item>
        <item name="textAppearanceSmallPopupMenu">@style/PopupMenuTextAppearanceSmall</item>

        <item name="android:colorControlActivated">@color/bg_blue</item>

        <item name="android:alertDialogTheme">@style/MaterialAlertDialogCustom</item>
    </style>

    <style name="ActionBarMenuTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorBackground">@color/bg_darker</item>
        <item name="android:textColor">@color/c_white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PopupMenuTheme" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/bg_darker</item>
        <item name="android:textColor">@color/c_white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PopupMenuTextAppearanceSmall" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/c_white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PopupMenuTextAppearanceLarge" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/c_white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/bg_lighter</item>
        <item name="android:textColor">@color/txt_main</item>
    </style>

    <style name="ItemMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/c_white</item>
    </style>

    <style name="ScalaLabel" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textColorHint">@color/txt_inactive</item>
    </style>

    <style name="ScalaLabel.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ScalaLabel.Gray">
        <item name="android:textColor">@color/c_grey</item>
    </style>

    <style name="ScalaLabel.Caps">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ScalaLabel.Caps.White">
        <item name="android:textColor">@color/c_white</item>
    </style>

    <style name="ScalaLabel.Caps.Black">
        <item name="android:textColor">@color/c_dark_grey</item>
    </style>

    <style name="ScalaText.Funds">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/txt_main</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ScalaText.Info">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/txt_main</item>
    </style>

    <style name="ScalaText.Balance">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/c_white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ScalaText.Balance.Success">
        <item name="android:textColor">@color/c_green</item>
    </style>

    <style name="ScalaText.Unconfirmed">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/txt_main</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ScalaText.ItemTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/c_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ScalaText.ItemSubtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/txt_main</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ScalaText.PaymentID">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/txt_main</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ScalaText.PosAmount">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/c_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ScalaText.PosFee">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/txt_main</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ScalaText.PosNote">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/txt_secondary</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ScalaText.Wallet">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/c_white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ScalaText.PosDate">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/txt_secondary</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- textSize is in dp here to match the layout of the numpad-->
    <style name="ScalaLabel.NumPad">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/txt_main</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ScalaLabel.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/txt_headline</item>
    </style>

    <style name="ScalaLabel.Subtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/txt_secondary</item>
    </style>

    <style name="ScalaLabel.Heading">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/txt_headline</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ScalaLabel.Heading.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/txt_headline</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ScalaLabel.Heading.Donation">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/txt_inactive</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Toolbar" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textColorHint">@color/txt_inactive</item>
    </style>

    <style name="Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/txt_headline</item>
    </style>

    <style name="Toolbar.Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/txt_secondary</item>
    </style>

    <style name="ScalaFab" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/c_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ScalaText" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textColorHint">@color/txt_inactive</item>
    </style>

    <style name="ScalaText.Gray">
        <item name="android:textColor">@color/txt_inactive</item>
    </style>

    <style name="ScalaText.Black">
        <item name="android:textColor">@color/txt_main</item>
    </style>

    <style name="ScalaText.Monospace">
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="ScalaText.Monospace.Mnemonic">
        <item name="android:textColor">@color/c_white</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ScalaText.Label">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ScalaText.Confirm">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ScalaText.Confirm.Label">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ScalaText.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ScalaText.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ScalaText.Large">
        <item name="android:textSize">20sp</item>
    </style>


    <style name="ScalaText.Success">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/txt_main</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ScalaText.Gray.SuccessFee">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ScalaText.Button" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/btn_icon_default</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ScalaText.Button.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ScalaButton" parent="@style/TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/txt_button_filled</item>
        <item name="android:textAppearance">@style/ScalaLabel</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ScalaButton.Blue">
        <item name="backgroundTint">@color/bg_blue</item>
    </style>

    <style name="ScalaButton.Grey">
        <item name="backgroundTint">@color/btn_bg_default</item>
    </style>

    <style name="ScalaButton.Lighter">
        <item name="backgroundTint">@color/bg_lighter</item>
    </style>

    <style name="ScalaButton.Green">
        <item name="android:background">@drawable/button_selector_green</item>
    </style>

    <style name="ScalaButton.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ScalaButton.Take">
        <item name="android:background">@color/c_green</item>
    </style>

    <style name="ScalaButton.Give">
        <item name="android:background">@color/c_orange</item>
    </style>

    <style name="ScalaEdit" parent="ScalaText">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="ScalaSpinner" parent="@style/Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/backgound_spinner</item>
    </style>

    <style name="ScalaSpinnerItem" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/ScalaTextAppearanceSpinnerItem</item>
    </style>

    <style name="ScalaTextAppearanceSpinnerItem" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/txt_button_outlined</item>
    </style>

    <style name="ScalaSpinnerItem.Balance">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ScalaSpinnerGray" parent="@style/Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/backgound_spinner_gray</item>
    </style>

    <style name="ExtendedFAB" parent="ScalaButton">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MaterialAlertDialogCustom" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@color/bg_lighter</item>
        <item name="shapeAppearanceOverlay">@style/MaterialAlertDialogCustom.Rounded</item>
        <item name="buttonBarPositiveButtonStyle">@style/MaterialAlertDialogCustom.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/MaterialAlertDialogCustom.Button.Negative</item>
        <item name="buttonBarNeutralButtonStyle">@style/MaterialAlertDialogCustom.Button.Neutral</item>
    </style>

    <style name="MaterialAlertDialogCustom.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item>
    </style>

    <style name="MaterialAlertDialogCustom.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="backgroundTint">@color/bg_blue</item>
        <item name="android:textColor">@color/txt_button_filled</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="MaterialAlertDialogCustom.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/txt_button_filled</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MaterialAlertDialogCustom.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/c_blue</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
